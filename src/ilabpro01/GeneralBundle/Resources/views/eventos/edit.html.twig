{% extends "ilabpro01BackFotogBundle:Default:baseMenuFotog.html.twig" %}

{% block stylesheets %}

    <link href="{{ asset('bundles/ilabpro01backfotog/css/menu.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/ilabpro01backfotog/css/encabezado.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/ilabpro01backfotog/css/formularios.css') }}" rel="stylesheet" type="text/css" />

{% endblock %}

{% block cuerpo %}
    
        <div id="cuerpo" >
        <div id="contenedor_cuerpo">

    <form action="{{ path('eventos_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />

        <div class="main_formulario">
                        <div class="box_leyenda_completar_datos">
                            <div class="box_titulo_secundario">
                                <h2>Editar evento</h2>
                            </div> 
                            <div class="item_input_dato_personal">
                                    <label class="label_informacion_personal">
                                         {{ form_label(edit_form.nombre) }}
                                        <span>*</span>
                                    </label>
                                    <div class="box_input input_nombre">
                                        {{ form_widget(edit_form.nombre, { 'attr': {'class': 'textbox'} }) }}
                                        {{ form_errors(edit_form.nombre) }}
                                    </div>
                                </div>
                            <div class="item_input_dato_personal">
                                    <label class="label_informacion_personal">
                                         {{ form_label(edit_form.descripcion) }}
                                        <span>*</span>
                                    </label>
                                    <div class="box_input input_nombre">
                                        {{ form_widget(edit_form.descripcion, { 'attr': {'class': 'textbox'} }) }}
                                        {{ form_errors(edit_form.descripcion) }}
                                    </div>
                                </div>
                            <div class="item_input_dato_personal">
                                    <label class="label_informacion_personal">
                                         {{ form_label(edit_form.fechaInicio) }}
                                        <span>*</span>
                                    </label>
                                    <div class="box_input input_nombre">
                                        {{ form_widget(edit_form.fechaInicio, { 'attr': {'class': 'textbox'} }) }}
                                        {{ form_errors(edit_form.fechaInicio) }}
                                    </div>
                                </div>
                            <div class="item_input_dato_personal">
                                    <label class="label_informacion_personal">
                                         {{ form_label(edit_form.fechaFin) }}
                                        <span>*</span>
                                    </label>
                                    <div class="box_input input_nombre">
                                        {{ form_widget(edit_form.fechaFin, { 'attr': {'class': 'textbox'} }) }}
                                        {{ form_errors(edit_form.fechaFin) }}
                                    </div>
                                </div>
                                <div class="item_input_dato_personal">
                                    <label class="label_informacion_personal">
                                         Tipo acceso
                                        <span>*</span>
                                    </label>
                                    <div class="box_input input_nombre">
                                        <select>
                                        
                                        <option>1 - Con clave</option>
                                      <option>2 - Sin clave</option>
                                      
                                    </select>
                                    </div>
                                </div>
    

            <div class="box_botonera">
                                    <div class="boton_anterior">
                                            <input class="boton" type="button" name="cancelar" value="Cancelar" onclick="document.location='{{ path('eventos') }}'; return false;">
                                    </div>
                                    <div class="boton_siguiente">
                                            <input class="boton" type="button" name="aceptar" value="Aceptar" onclick="document.location='{{ path('eventos') }}'; return false;">
                                    </div>
                                </div>
        
            
                </div>
    
    </div>
    </form>
    {#
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('eventos') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('eventos_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
#}
            </div>
    
    </div>  
{% endblock %}
