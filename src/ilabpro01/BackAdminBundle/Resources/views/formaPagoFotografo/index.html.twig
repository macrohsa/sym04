                <td>
                <ul>
                    <li>
                        <a href="{{ path('formapagofotografo_show', { 'id': entity.id }) }}">mostrar</a>
                    </li>
                    <li>
                        <a href="{{ path('formapagofotografo_edit', { 'id': entity.id }) }}">editar</a>
                    </li>
