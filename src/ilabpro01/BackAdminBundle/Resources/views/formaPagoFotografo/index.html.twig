    <table class="imagetable">
        <thead>
            <tr>
{#                    <th>Id</th>
#}
                <th>Código Forma Pago</th>
                <th>Nombre</th>
                <th>Disponible</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
{#                    <td><a href="{{ path('formapagofotografo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
#}
