{% extends "ilabpro01BackAdminBundle:Default:baseMenu.html.twig" %}

{% block stylesheets %}

    <link href="{{ asset('bundles/ilabpro01backadmin/css/menu.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/ilabpro01backadmin/css/encabezado.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/ilabpro01backadmin/css/formularios.css') }}" rel="stylesheet" type="text/css" />

{% endblock %}

{% block cuerpo %}
    
    <div id="cuerpo" >
        <div id="contenedor_cuerpo">

    <form action="{{ path('formapagofotografo_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
         {#
        {{ form_widget(edit_form) }}
        #}
        
        
        {{ form_errors(edit_form) }}

                    <div class="main_formulario">
                        <div class="box_leyenda_completar_datos">
                            <div class="box_titulo_secundario">
                                <h2 id="titulo" >Edición Forma Pago Fotógrafo</h2> 
                            </div>
                            <p></p>
                            <div class="box_input_informacion_personal">

                                <div class="item_input_dato_personal">
                                    <label class="label_informacion_personal">
                                         {{ form_label(edit_form.codigoFormaPago) }}
                                        <span>*</span>
                                    </label>
                                    <div class="box_input input_nombre">
                                        {{ form_widget(edit_form.codigoFormaPago, { 'attr': {'readonly': 'true', 'class': 'textbox'} }) }}
                                        {{ form_errors(edit_form.codigoFormaPago) }}
                                    </div>
                                </div>

                                <div class="item_input_dato_personal">
                                    <label class="label_informacion_personal">
                                         {{ form_label(edit_form.nombre) }}
                                        <span>*</span>
                                    </label>
                                    <div class="box_input input_nombre">
                                        {{ form_widget(edit_form.nombre, { 'attr': {'class': 'textbox'} }) }}
                                        {{ form_errors(edit_form.nombre) }}
                                    </div>
                                </div>

                                <div class="item_input_dato_personal">
                                    <label class="label_informacion_personal">
                                         {{ form_label(edit_form.disponible) }}
                                    </label>
                                    <div class="box_input input_nombre">
                                        {{ form_widget(edit_form.disponible) }}
                                        {{ form_errors(edit_form.disponible) }}
                                    </div>
                                </div>

                                {{ form_rest(edit_form) }}
                                
                                <div class="box_botonera">
                                    <div class="boton_anterior">
                                            <input class="boton" type="button" name="cancelar" value="Cancelar" onclick="document.location='{{ path('formapagofotografo') }}'; return false;">
                                    </div>
                                    <div class="boton_siguiente">
                                            <input class="boton" type="submit" name="aceptar" value="Aceptar" >
                                    </div>
                                </div>                           
    <li>
        <form action="{{ path('formapagofotografo_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Eliminar</button>
        </form>
    </li>

    
            </div>
        
                </div>
{% endblock %}
