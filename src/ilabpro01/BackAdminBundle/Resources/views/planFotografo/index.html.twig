{% extends "ilabpro01BackAdminBundle:Default:baseMenu.html.twig" %}

{% block stylesheets %}

    <link href="{{ asset('bundles/ilabpro01backadmin/css/menu.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/ilabpro01backadmin/css/encabezado.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/ilabpro01backadmin/css/cuerpo.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/ilabpro01backadmin/css/tabla.css') }}" rel="stylesheet" type="text/css" />

{% endblock %}

{% block cuerpo %}

    <div id="contenedorCuerpo">
        
        <div id="contenidoCuerpo">
        <h2>Planes Fotógrafo</h2>

        <table class="imagetable">
            <thead>
                <tr>
{#                    <th>Id</th>
#}
                    <th>Código</th>
                    <th>Nombre</th>
                    <th>Días Vigencia</th>
                    <th>Disponible</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
{#                    <td><a href="{{ path('planfotografo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
#}
                    <td>{{ entity.codigoPlan }}</td>
                    <td>{{ entity.nombre }}</td>
                    <td>{{ entity.diasVigencia }}</td>
                    <td>
                        {% if entity.disponible == 1 %}
                            Sí
                        {% else %}
                            No
                        {% endif %}
                    </td>
                    <td>
                    <ul>
                        <li>
                            <a href="{{ path('planfotografo_show', { 'id': entity.id }) }}">mostrar</a>
                        </li>
                        <li>
                            <a href="{{ path('planfotografo_edit', { 'id': entity.id }) }}">editar</a>
                        </li>
                    </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


        <ul>
            <li>
                <a href="{{ path('planfotografo_new') }}">
                    Nuevo Plan
                </a>
            </li>
             <li>
                <a href="{{ path('login_back') }}">
                    Volver
                </a>
            </li>
        </ul>
    
           </div>
    
    </div> 
    {% endblock %}
